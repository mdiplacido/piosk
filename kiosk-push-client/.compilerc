{
  "env": {
    "development": {
      "text/typescript": {
        "allowSyntheticDefaultImports": false,    
        "declaration": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "inlineSources": true,        
        "importHelpers": true,
        "jsx": "react",
        "lib": [
          "dom",
          "dom.iterable",
          "esnext"
        ],    
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es2015"
      }
    },
    "production": {
      "text/typescript": {
        "allowSyntheticDefaultImports": false,    
        "declaration": true,
        "experimentalDecorators": true,
        "lib": [
          "dom",
          "dom.iterable",
          "esnext"
        ],    
        "importHelpers": true,
        "jsx": "react",   
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": false,
        "sourceMap": false,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es2015"
      }
    }
  }
}