{
  "name": "piosk",
  "version": "1.0.0",
  "description": "Top Level piosk node packages",
  "main": "index.js",
  "scripts": {
    "build:client": "cd kiosk-browser-client && npm run build",
    "build:server": "cd kiosk-server && npm run build",
    "build": "run-p build:client build:server",
    "install:client": "cd kiosk-browser-client && npm install",
    "install:server": "cd kiosk-server && npm install",
    "postinstall": "run-p install:client install:server",
    "start:client": "cd kiosk-browser-client && npm start",
    "start:server": "cd kiosk-server && npm run start:watch",
    "start": "run-p start:client start:server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdiplacido/piosk.git"
  },
  "keywords": [
    "piosk",
    "shared",
    "dependencies"
  ],
  "author": "mdiplacido",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mdiplacido/piosk/issues"
  },
  "homepage": "https://github.com/mdiplacido/piosk#readme",
  "devDependencies": {
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5"
  }
}
