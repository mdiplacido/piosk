<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:windows_push_client"
        xmlns:Controls="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls.WebView" x:Class="windows_push_client.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <Controls:WebView x:Name="Viewport" Margin="0,42,0,0"/>
        <TextBox x:Name="Location" HorizontalAlignment="Left" Height="28" TextWrapping="Wrap" Text="https://www.microsoft.com" VerticalAlignment="Top" Width="371" Margin="0,1,0,0"/>
        <Button Content="Go" HorizontalAlignment="Left" Margin="373,2,0,0" VerticalAlignment="Top" Width="66" Height="27" Click="Button_Click"/>
        <Button x:Name="CaptureScreen" Content="Capture" HorizontalAlignment="Left" Margin="441,2,0,0" VerticalAlignment="Top" Width="66" Height="27" Click="CaptureScreen_Click"/>

    </Grid>
</Window>
